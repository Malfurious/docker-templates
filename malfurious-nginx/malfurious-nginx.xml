<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>True</Beta>
  <Category>Other:Tools</Category>
  <Date></Date>
  <Name>malfurious-nginx</Name>
  <Support></Support>
  <Description>
	nginx is used as a reverse proxy.
	[b]If using in conjunction with my Rainloop/Postfixadmin/mailserver dockers, please leave 
	"--link malfurious-postfixadmin:malfurious-postfixadmin --link malfurious-rainloop:malfurious-rainloop" under extra parameters.
	Otherwise, clear the box.[/b]
  </Description>
  <Overview>
  </Overview>
  <Project>https://www.nginx.com/</Project>
  <Registry>https://registry.hub.docker.com/u/malfurious/nginx/</Registry>
  <Repository>malfurious/nginx</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
      <Publish>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
	  <Port>
        <HostPort>4430</HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
   </Publish>
  </Networking>
  <Data>
   <Volume>
	<HostDir>/mnt/docker/nginx/sites-enabled</HostDir>
      <ContainerDir>/sites-enabled</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
	<Volume>
	<HostDir>/mnt/docker/nginx/conf</HostDir>
      <ContainerDir>/conf.d</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
	<Volume>
	<HostDir>/mnt/docker/nginx/log</HostDir>
      <ContainerDir>/var/log/nginx</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
	<Volume>
	<HostDir>/mnt/docker/nginx/certs</HostDir>
      <ContainerDir>/certs</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
<WebUI></WebUI>
  <Icon>https://raw.githubusercontent.com/Malfurious/docker-templates/master/images/NginxIcon.png</Icon>
  <ExtraParams>--link malfurious-postfixadmin:malfurious-postfixadmin --link malfurious-rainloop:malfurious-rainloop</ExtraParams> 
<DonateText></DonateText>
<DonateLink></DonateLink>
<DonateImg></DonateImg>
</Container>